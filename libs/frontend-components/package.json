{
    "name": "@tabletop/frontend-components",
    "version": "0.0.1",
    "private": true,
    "type": "module",
    "svelte": "./dist/index.js",
    "types": "./dist/index.ts",
    "scripts": {
        "clean": "rimraf build && rimraf dist",
        "build": "npm run package",
        "package": "svelte-kit sync && svelte-package",
        "test": "npm run test:integration && npm run test:unit",
        "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
        "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
        "lint": "eslint .",
        "test:integration": "playwright test",
        "test:unit": "vitest"
    },
    "exports": {
        ".": {
            "types": "./dist/index.ts",
            "svelte": "./dist/index.js",
            "import": "./dist/index.js"
        }
    },
    "files": [
        "dist",
        "!dist/**/*.test.*",
        "!dist/**/*.spec.*"
    ],
    "peerDependencies": {
        "@sveltejs/kit": "^2.48.4",
        "svelte": "^5.0.0"
    },
    "dependencies": {
        "@joeattardi/emoji-button": "github:justinkwaugh/picmo#emoji-button",
        "@sinclair/typebox": "^0.32.32",
        "@sveltejs/package": "^2.5.4",
        "@tabletop/common": "*",
        "compare-versions": "^6.1.1",
        "emoji-regex": "^10.4.0",
        "gsap": "^3.12.5",
        "nanoid": "^5.1.6",
        "svelte-json-tree": "github:justinkwaugh/svelte-json-tree",
        "svelte-sonner": "^0.3.27",
        "wretch": "^2.9.0"
    },
    "devDependencies": {
        "@playwright/test": "^1.42.1",
        "@sveltejs/kit": "^2.48.4",
        "@sveltejs/vite-plugin-svelte": "^6.2.1",
        "@tabletop/eslint-config": "*",
        "@tailwindcss/postcss": "^4.1.16",
        "@typescript-eslint/eslint-plugin": "^7.1.0",
        "@typescript-eslint/parser": "^7.1.0",
        "autoprefixer": "^10.4.19",
        "eslint": "^8.57.0",
        "flowbite": "^3.1.2",
        "flowbite-svelte": "^1.20.1",
        "flowbite-svelte-icons": "^3.0.0",
        "postcss": "^8.4.38",
        "prettier": "^3.3.3",
        "prettier-plugin-svelte": "^3.2.6",
        "rimraf": "^6.1.0",
        "svelte": "^5.0.0",
        "svelte-check": "^4.0.5",
        "tailwindcss": "^4.1.16",
        "tslib": "^2.8.1",
        "typescript": "5.9.3",
        "vite": "^7.1.12"
    }
}
