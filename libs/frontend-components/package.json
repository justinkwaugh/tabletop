{
    "name": "@tabletop/frontend-components",
    "version": "0.0.1",
    "private": true,
    "type": "module",
    "svelte": "./dist/index.js",
    "types": "./dist/index.ts",
    "scripts": {
        "clean": "rimraf build && rimraf dist",
        "build": "pnpm run package",
        "package": "svelte-kit sync && svelte-package",
        "test": "pnpm run test:integration && pnpm run test:unit",
        "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
        "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
        "lint": "eslint .",
        "test:integration": "playwright test",
        "test:unit": "vitest"
    },
    "exports": {
        ".": {
            "types": "./dist/index.ts",
            "svelte": "./dist/index.js",
            "import": "./dist/index.js"
        },
        "./definition/gameUiDefinition": {
            "types": "./dist/definition/gameUiDefinition.d.ts",
            "svelte": "./dist/definition/gameUiDefinition.js",
            "import": "./dist/definition/gameUiDefinition.js"
        },
        "./definition/gameColorizer": {
            "types": "./dist/definition/gameColorizer.d.ts",
            "svelte": "./dist/definition/gameColorizer.js",
            "import": "./dist/definition/gameColorizer.js"
        },
        "./utils/dynamicComponent": {
            "types": "./dist/utils/dynamicComponent.d.ts",
            "svelte": "./dist/utils/dynamicComponent.js",
            "import": "./dist/utils/dynamicComponent.js"
        }
    },
    "files": [
        "dist",
        "!dist/**/*.test.*",
        "!dist/**/*.spec.*",
        "src/lib",
        "!src/lib/**/*.test.*",
        "!src/lib/**/*.spec.*"
    ],
    "peerDependencies": {
        "@sveltejs/kit": "^2.48.4",
        "svelte": "^5.0.0"
    },
    "dependencies": {
        "ably": "^2.17.0",
        "@floating-ui/dom": "^1.7.4",
        "@joeattardi/emoji-button": "github:justinkwaugh/picmo#emoji-button",
        "@sveltejs/package": "^2.5.7",
        "@tabletop/common": "workspace:*",
        "compare-versions": "^6.1.1",
        "emoji-regex": "^10.4.0",
        "es-iterator-helpers": "^1.2.2",
        "gsap": "^3.14.2",
        "idb": "^8.0.3",
        "javascript-time-ago": "^2.5.10",
        "nanoid": "^5.1.6",
        "runed": "^0.37.1",
        "svelte-json-tree": "github:justinkwaugh/svelte-json-tree",
        "svelte-sonner": "^0.3.27",
        "typebox": "^1.0.79",
        "wretch": "^2.9.0"
    },
    "devDependencies": {
        "@playwright/test": "^1.42.1",
        "@sveltejs/adapter-static": "^3.0.10",
        "@sveltejs/kit": "^2.48.4",
        "@sveltejs/vite-plugin-svelte": "^6.2.4",
        "@tabletop/eslint-config": "workspace:*",
        "@tabletop/vitest-config": "workspace:*",
        "@tailwindcss/postcss": "^4.1.18",
        "@typescript-eslint/eslint-plugin": "^8.53.1",
        "@typescript-eslint/parser": "^8.53.1",
        "autoprefixer": "^10.4.23",
        "eslint": "^9.39.2",
        "flowbite": "^3.1.2",
        "flowbite-svelte": "^1.31.0",
        "flowbite-svelte-icons": "^3.1.0",
        "postcss": "^8.4.38",
        "prettier": "^3.8.0",
        "prettier-plugin-svelte": "^3.4.1",
        "rimraf": "^6.1.0",
        "svelte": "^5.0.0",
        "svelte-check": "^4.3.5",
        "tailwindcss": "^4.1.18",
        "tslib": "^2.8.1",
        "typescript": "5.9.3",
        "vite": "^7.3.1"
    }
}
