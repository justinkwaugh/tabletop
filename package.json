{
    "private": true,
    "scripts": {
        "build": "turbo run build",
        "check": "turbo run check",
        "clean": "turbo run clean",
        "clean:node": "rimraf node_modules /**/node_modules",
        "watch": "turbo watch dev --filter=@tabletop/frontend --filter=@tabletop/backend",
        "dev": "turbo dev --filter=@tabletop/frontend --filter=@tabletop/backend",
        "email": "turbo watch dev --filter=@tabletop/email",
        "lint": "turbo run lint",
        "test": "vitest",
        "watch:frontend": "turbo watch dev --filter=@tabletop/frontend",
        "watch:backend": "turbo watch dev --filter=@tabletop/backend",
        "start:backend": "turbo run start --filter=@tabletop/backend",
        "update-games": "turbo update-games",
        "deploy:tui": "node tools/deploy/esm/cli.js tui"
    },
    "devDependencies": {
        "@types/react": "^19.2.2",
        "eslint": "^9.39.2",
        "prettier": "^3.3.3",
        "rimraf": "^6.1.2",
        "turbo": "^2.6.0",
        "vitest": "^4.0.17"
    },
    "engines": {
        "node": ">=18"
    },
    "name": "tabletop",
    "packageManager": "npm@11.6.1",
    "workspaces": [
        "libs/*",
        "games/*",
        "apps/*",
        "config/*",
        "tools/*"
    ],
    "dependencies": {
        "nanoid": "^5.1.6"
    }
}
