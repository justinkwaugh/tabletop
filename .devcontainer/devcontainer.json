{
    "dockerComposeFile": ["../docker-compose.yml", "docker-compose.yml"],
    "service": "tabletop",
    "workspaceFolder": "/workspace",
    "shutdownAction": "stopCompose",
    "postCreateCommand": "sudo chown -R node:node /workspace/node_modules; npm install; turbo init-project",
    "features": {
        "ghcr.io/stuartleeks/dev-container-features/shell-history:0": {}
    },
    "customizations": {
        "vscode": {
            "extensions": ["1YiB.svelte-bundle", "esbenp.prettier-vscode"]
        }
    }
}
