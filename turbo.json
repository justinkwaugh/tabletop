{
    "$schema": "https://turbo.build/schema.json",
    "globalDependencies": [".env"],
    "ui": "tui",
    "tasks": {
        "build": {
            "dependsOn": ["^build"],
            "inputs": ["$TURBO_DEFAULT$", ".env", ".env.local"],
            "outputs": [".svelte-kit/**", "build/**/*", "dist/**/*", "esm/**/*"],
            "env": [
                "VERSION",
                "DISCORD_CLIENT_ID",
                "DISCORD_BOT_TOKEN",
                "FRONTEND_HOST",
                "K_SERVICE",
                "GOOGLE_CLIENT_ID",
                "HOST",
                "PORT",
                "TASKS_HOST",
                "REDIS_HOST",
                "REDIS_PORT",
                "GCLOUD_PROJECT",
                "VAPID_PUBLIC_KEY",
                "DISCORD_PUBLIC_KEY",
                "ABLY_API_KEY",
                "SESSION_SECRET",
                "SESSION_SALT",
                "TEST_DISCORD_USER_ID"
            ]
        },
        "lint": {},
        "dev": {
            "dependsOn": ["^build"],
            "cache": false,
            "persistent": true
        },
        "start": {
            "dependsOn": ["^build"],
            "cache": false,
            "persistent": true
        },
        "clean": {
            "dependsOn": ["^clean"],
            "cache": false
        },
        "check": {
            "dependsOn": ["^check"],
            "cache": false
        },
        "docker-build": {
            "dependsOn": ["@tabletop/backend#build", "@tabletop/frontend#build", "^build"],
            "cache": false
        },
        "bundle": {
            "dependsOn": ["^build"],
            "outputs": ["public/**/*"]
        },
        "update-games": {
            "dependsOn": ["@tabletop/games-config#build", "^update-games"],
            "cache": false
        },
        "init-project": {
            "cache": false
        }
    }
}
